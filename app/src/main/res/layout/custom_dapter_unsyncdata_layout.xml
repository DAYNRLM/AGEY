<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <com.google.android.material.card.MaterialCardView
            style="@style/carViewTheme"
            app:strokeColor="@color/teal_200">

            <LinearLayout
                android:layout_margin="@dimen/space_3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_margin="@dimen/space_3dp"
                    android:padding="@dimen/space_1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registration Number:"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"/>
                    <TextView
                        android:id="@+id/tv_regNumber"
                        android:gravity="center_horizontal"
                        android:layout_weight="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HR-12U-2871"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_extra_bold"/>

                </LinearLayout>

                <TextView
                    android:layout_marginLeft="@dimen/space_3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tracking Record for:"
                    android:textColor="@color/black"
                    android:fontFamily="@font/manrope_extra_bold"/>

                <LinearLayout
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.card.MaterialCardView
                        style="@style/carViewTheme"
                        android:layout_weight="1"
                        app:strokeWidth="0.5dp"
                        app:strokeColor="@color/orange_500">

                        <LinearLayout
                            android:layout_margin="@dimen/space_3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:gravity="center_horizontal"
                                android:layout_weight="1.2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Month"
                                android:textColor="@color/black"
                                android:fontFamily="@font/manrope_regular"/>
                            <TextView
                                android:id="@+id/tv_month"
                                android:gravity="center_horizontal"
                                android:layout_weight="0.8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="March"
                                android:textColor="@color/black"
                                android:fontFamily="@font/manrope_extra_bold"/>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>



                    <com.google.android.material.card.MaterialCardView
                        style="@style/carViewTheme"
                        android:layout_weight="1"
                        app:strokeWidth="0.5dp"
                        app:strokeColor="@color/orange_500">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_3dp"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:gravity="center_horizontal"
                                android:layout_weight="0.8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Year"
                                android:textColor="@color/black"
                                android:fontFamily="@font/manrope_regular"/>
                            <TextView
                                android:id="@+id/tv_year"
                                android:gravity="center_horizontal"
                                android:layout_weight="1.2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2021"
                                android:textColor="@color/black"
                                android:fontFamily="@font/manrope_extra_bold"/>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>



                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/space_5dp"
                        android:layout_toLeftOf="@+id/btn_syncdata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="UserId: "
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:fontFamily="@font/manrope_regular"/>
                        <TextView
                            android:id="@+id/tv_userId"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="UPAGANANDS"
                            android:textColor="@color/black"
                            android:fontFamily="@font/manrope_extra_bold"/>



                    </LinearLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_syncdata"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/space_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/IconTextContainedButton"
                        android:text="Sync data"
                        android:fontFamily="@font/manrope_extra_bold" />


                </RelativeLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</layout>