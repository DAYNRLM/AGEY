<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.mpin.VerifyMpinFragment">


    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi, Lincon Bhalla"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:fontFamily="@font/manrope_extra_bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="linconbhalla007@gmail.com"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:fontFamily="@font/manrope_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginLeft="10dp"
                android:textColor="@color/orange_700"
                android:gravity="center_horizontal"/>


        </LinearLayout>


        <com.chaos.view.PinView
            android:layout_gravity="center_horizontal"
            android:id="@+id/firstPinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_regular"
            app:cursorColor="@color/orange_500"
            app:cursorWidth="2dp"
            app:itemCount="4"
            app:itemHeight="48dp"
            app:itemRadius="4dp"
            app:itemSpacing="0dp"
            app:itemWidth="48dp"
            app:lineColor="@color/orange_500"
            app:lineWidth="2dp"
            app:viewType="rectangle" />

    </LinearLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_verify"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/IconTextContainedButton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:text="Verify Mpin"
        android:textSize="16sp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:fontFamily="@font/manrope_semi_bold"/>

</RelativeLayout>